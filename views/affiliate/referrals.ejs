<%- include("../partials/head", { title }) %>
<main class="landing">
  <%- include("../partials/affiliate-nav") %>
  <section class="how">
    <section class="card">
      <h1>Comercios referidos</h1>
      <% if (!referrals.length) { %><div class="empty">Aun no tienes comercios referidos.</div><% } %>
      <div class="table-wrap">
        <table class="table">
          <thead><tr><th>Comercio</th><th>Titular</th><th>Email</th><th>Fecha referido</th></tr></thead>
          <tbody>
            <% referrals.forEach((r) => { %>
              <tr>
                <td><%= r.business_name %></td>
                <td><%= r.owner_name %></td>
                <td><%= r.owner_email %></td>
                <td><%= r.referred_at || r.created_at %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </section>
  </section>
</main>
<%- include("../partials/scripts") %>
