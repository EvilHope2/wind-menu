<%- include("../partials/head", { title, robots }) %>
<main class="landing">
  <%- include("../partials/affiliate-nav") %>
  <section class="how">
    <section class="card">
      <h1>Comercios referidos</h1>
      <form class="form inline" method="get" action="/afiliados/referidos">
        <input type="search" name="q" value="<%= filters.q || '' %>" placeholder="Buscar comercio, titular o email" />
        <button class="btn btn-primary" type="submit">Buscar</button>
      </form>
      <% if (!referrals.length) { %><div class="empty">Aun no tienes comercios referidos.</div><% } %>
      <div class="table-wrap">
        <table class="table">
          <thead><tr><th>Comercio</th><th>Titular</th><th>Email</th><th>Fecha alta</th><th>Plan</th><th>Estado</th></tr></thead>
          <tbody>
            <% referrals.forEach((r) => { %>
              <tr>
                <td><%= r.business_name %></td>
                <td><%= r.owner_name %></td>
                <td><%= r.owner_email %></td>
                <td><%= r.referred_at || r.created_at %></td>
                <td><%= r.plan_name || '-' %></td>
                <td><span class="tag"><%= Number(r.has_completed_onboarding) ? 'Activo' : 'Pending' %></span></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </section>
  </section>
</main>
<%- include("../partials/scripts") %>
