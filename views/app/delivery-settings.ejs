<%- include("../partials/head", { title }) %>
<main class="app-shell">
  <%- include("../partials/app-sidebar", { activePage }) %>
  <section class="app-content">
    <%- include("../partials/flash") %>
    <header class="page-head">
      <h1>Configuracion de delivery</h1>
      <p class="muted">Define si aceptas envio/retiro y reglas generales de minimo y envio gratis.</p>
    </header>

    <section class="card">
      <form method="post" action="/app/delivery-settings" class="form two-col">
        <label class="checkbox">
          <input type="checkbox" name="delivery_enabled" <%= business.delivery_enabled ? 'checked' : '' %> />
          Habilitar envio a domicilio
        </label>
        <label class="checkbox">
          <input type="checkbox" name="pickup_enabled" <%= business.pickup_enabled ? 'checked' : '' %> />
          Habilitar retiro en local
        </label>

        <label>Pedido minimo general (opcional)
          <input type="number" step="0.01" min="0" name="minimum_order_amount" value="<%= business.minimum_order_amount ?? '' %>" />
        </label>
        <label>Envio gratis desde (opcional)
          <input type="number" step="0.01" min="0" name="free_delivery_over_amount" value="<%= business.free_delivery_over_amount ?? '' %>" />
        </label>

        <button class="btn btn-primary" type="submit">Guardar configuracion</button>
      </form>
    </section>
  </section>
</main>
<%- include("../partials/scripts") %>
